<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
            android:id="@+id/decode_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/item_bg"
    >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="18dp"
                android:gravity="center"
                android:text="点我解码视频文件"
        />
        <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/black"
        />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/player_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/item_bg"
    >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="18dp"
                android:gravity="center"
                android:text="点我播放视频"
        />
        <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/black"
        />
    </LinearLayout>

    <com.caiy.study.view.VideoView
            android:id="@+id/player_video_view"
            android:layout_width="match_parent"
            android:layout_height="300dp"
    />

    <LinearLayout
            android:id="@+id/audio_decode_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/item_bg"
    >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="18dp"
                android:gravity="center"
                android:text="点我解码音频文件 TODO"
        />
        <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/black"
        />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/audio_player_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/item_bg"
    >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="18dp"
                android:gravity="center"
                android:text="点我播放音频"
        />
        <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/black"
        />
    </LinearLayout>
</LinearLayout>
